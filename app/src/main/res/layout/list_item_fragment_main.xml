<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="#FFFFFF">

    <ImageView android:id="@+id/iv_category"
        android:layout_height="24dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_news"
        android:layout_weight="1"/>
    <ImageView android:id="@+id/iv_video"
        android:layout_height="24dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_tv_show"
        android:layout_weight="1" />
    <ImageView android:id="@+id/iv_face_gaming"
        android:layout_height="24dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_face_gaming_24"
        android:layout_weight="1"
        android:scaleType="centerInside"/>
    <ImageView android:id="@+id/iv_notification"
        android:layout_height="24dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_notification_24"
        android:layout_weight="1"/>
    <ImageView android:id="@+id/iv_menu"
        android:layout_height="24dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_menu_26"
        android:layout_weight="1"/>
</LinearLayout>